#include <iostream>
using namespace std;
string refranes[3][5]={{"A palabras necias ***** ******", "A caballo regalado ** ** ** ***** *** *******","A quien madruga **** ** *****","Más vale tarde *** *****", "Hombre precavido **** *** ***"},
                      {"oídos sordos","no se le miran los dientes","dios le ayuda","que nunca","vale por dos"},
                      {"A palabras necias oídos sordos","A caballo regalado no se le miran los dientes","A quien madruga dios le ayuda","Mas vale tarde que nunca","Hombre precavido vale por dos"}};
int c=0;
void compararRespuesta(int x){
  string y;
  cout<<"Ingrese su respuesta:";
  cin.ignore();
  getline(cin,y);
  if(y==refranes[1][c])
    cout<<"\nExcelente, usted obtuvo un punto"<<endl;
  else
    cout<<"Respuesta incorrecta :c"<<endl;
  c++;
}
void mostrarRefranincompleto(int i){
for(int j=0;j<5;j++){
  cout<<"\n"<<refranes[0][j]<<endl;
  cout<<"\nIngrese 1 si desea jugar o presione 2 si desea omitir el refrán y ver otro:";
  int x;
  cin>>x;
  if(x==1)
    compararRespuesta(x);
  if(x==2)
    c++;
  if(x>=3||x<=0)
    cout<<"Ingrese un valor válido";
}
cout<<"\nNo hay más refranes, gracias por jugar :)";
}

void mostrarRespuestas(int i){
cout<<"respuestas";
}
void mostrarSalida(int i){
cout<<"Ni siquiera probaste mi juego :c";
}
void menuPrograma(){
  int i=0;
  cout<<"******************************************"<<endl;
  cout<<"*                                        *"<<endl;
  cout<<"*    Bienvenido al juego de refranes     *"<<endl;
  cout<<"*                                        *"<<endl;
  cout<<"******************************************"<<endl;
  cout<<"Ingrese el número de opción que desee utilizar:"<<endl;
  cout<<"(1) Jugar a completar refranes."<<endl;
  cout<<"(2) Mostrar resultados anteriores."<<endl;
  cout<<"(3) Salir"<<endl<<"\n";
  cout<<"Reglas:"<<endl;
  cout<<"-Use los signos gramaticales correspondientes"<<endl;
  cout<<"-Ingrese los datos en minúscula"<<endl;
  cout<<"Seleccione una opción del Menú:";
  cin >> i;
  for(int i=0;i<5;i++){
  if(i==1)
    mostrarRefranincompleto(i);
    break;
  if(i==2){
    mostrarRespuestas(i);
  }
  if(i==3){
    mostrarSalida(i);
    break;  
  }
  }
}

int main(){
    menuPrograma();
}
